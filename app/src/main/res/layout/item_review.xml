<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:paddingBottom="24dp">

    <ImageView
        android:id="@+id/reviewProfileImg"
        android:layout_margin="24dp"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_profile_placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/reviewUsername"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        tools:text="pero.peric"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/purple"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/reviewProfileImg"
        app:layout_constraintBottom_toTopOf="@id/reviewComment"
        />
    <TextView
        android:id="@+id/reviewRating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/purple"
        android:layout_marginHorizontal="40dp"
        tools:text="3"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/reviewComment"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/reviewStar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_star_vector"
        app:layout_constraintStart_toEndOf="@id/reviewRating"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/reviewComment"
        />

    <TextView
        android:id="@+id/reviewComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="This show was a complete masterpiece, I really liked it."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reviewProfileImg"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="customOutlinedBoxWhite" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/white</item>
        <item name="boxStrokeColor">@color/selector_text_input_border_white</item>
<!--        <item name="android:strokeColor">@color/white</item>-->
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="customOutlinedBoxPurple" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/purple</item>
        <item name="boxStrokeColor">@color/selector_text_input_border_purple</item>
        <item name="android:strokeColor">@color/purple</item>
        <item name="android:textColorHint">@color/purple</item>
        <item name="hintTextColor">@color/purple</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="colorControlActivated">@color/purple</item>
    </style>

    <style name="whiteButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/selector_button_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/selector_button_text</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="purpleButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/purple</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/purple</item>
    </style>

        <style name="Theme.App.Starting" parent="Theme.SplashScreen">
            <item name="windowSplashScreenAnimatedIcon">@drawable/ic_triangle_3</item>
            <item name="windowSplashScreenBackground">@color/purple</item>
            <item name="windowSplashScreenIconBackgroundColor">@color/purple</item>
<!--            <item name="windowSplashScreenAnimationDuration">1000</item>-->
            <item name="postSplashScreenTheme">@style/Theme.Showssaratedd</item>
        </style>

</resources>